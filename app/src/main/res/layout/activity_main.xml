<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Titre -->
    <EditText
        android:id="@+id/Titre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Titre"
        android:inputType="textPersonName" />

    <!-- Contenu -->
    <EditText
        android:id="@+id/Contenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Contenu"
        android:inputType="textMultiLine"
        android:minLines="3" />

    <!-- Date/Heure sélectionnée -->
    <TextView
        android:id="@+id/DateHeure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="23/01/2026 16:08"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#E8F0FE"
        android:padding="12dp"
        android:layout_marginVertical="8dp" />

    <!-- Boutons Date/Heure -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Changer Date"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/Heure"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Changer Heure"
            android:layout_marginStart="8dp" />
    </LinearLayout>

    <!-- CheckBoxes -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp">

        <CheckBox
            android:id="@+id/cbPerso"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="perso" />

        <CheckBox
            android:id="@+id/cbTravail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="travail" />

        <CheckBox
            android:id="@+id/cbVoyage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="voyage" />
    </LinearLayout>

    <!-- Bouton Enregistrer -->
    <Button
        android:id="@+id/Enregistrer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enregistrer"
        android:textSize="18sp"
        android:layout_marginTop="16dp" />

    <!-- Liste des entrées -->
    <ListView
        android:id="@+id/listViewJournal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="16dp"
        android:background="#F5F5F5"
        android:divider="#E0E0E0"
        android:dividerHeight="1dp" />

</LinearLayout>
